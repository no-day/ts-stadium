{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@no-day/ts-stadium": ["../ts-stadium/src"],
      "@no-day/ts-stadium/dot": ["../ts-stadium/src/dot.ts"],
      "@no-day/ts-stadium/graph": ["../ts-stadium/src/graph.ts"],
      "~/*": ["./content/*"]
    },

    "noEmit": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES2019", "ESNext", "DOM"],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true
  },
  "references": [],
  "include": ["content/**/*.ts", "content/**/*.tsx"]
}
